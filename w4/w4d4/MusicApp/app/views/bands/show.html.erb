<h1><%= @band.name %></h1>

<h4>Albums</h4>

<ul>
  <% @band.albums.each do |album| %>
    <li><%= link_to album.name, album_url(album) %></li>
  <% end %>
</ul>

<h4>Links</h4>
<%= link_to "New album", new_band_album_url(@band), class: 'btn' %>
<%= link_to "Edit Band", edit_band_url(@band), class: 'btn' %>
<%= link_to "Delete Band", band_url(@band), method: :delete, class: 'btn' %>
<%= link_to "All bands", bands_url, class: 'btn' %>
